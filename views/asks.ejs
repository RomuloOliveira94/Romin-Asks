<%- include ('partials/header.ejs')%>
<body>
    <%- include ('partials/navbar.ejs')%>
    <main class="container">
        <div class="card" id="card-form">
            <div class="card-header">
                <h3>Ask your question here! ✍️</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/saveask">
                    <label>Title</label>
                    <input type="text" placeholder="Question" class="form-control" name="title">
                    <br>
                    <label>Description</label>
                    <textarea placeholder="Describe your question here" class="form-control" name="description"></textarea>
                    <br>
                    <button class="btn btn-success">Ask</button>
                </form>
            </div>
        </div>
    </main>
</body>
<%- include ('partials/footer.ejs')%>